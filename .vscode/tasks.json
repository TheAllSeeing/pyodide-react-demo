{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Uvicorn run",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "app:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--reload-include",
                "'*'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}
